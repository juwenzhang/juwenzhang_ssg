{
  // Check if the 'src' directory exists and contains TypeScript files
  // If not, create the 'src' directory and add a sample TypeScript file
  // Ensure that the 'include' path is correct and matches the actual project structure
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}